<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Barcode</th>
      <th>Description</th>
      <th>Price</th>
      <th>Lead time</th>
      <th>Company</th>
      <th>Tax</th>
      <th>Discount</th>
      <th>Stock</th>
      <th>Stock active</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.barcode %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.lead_time %></td>
        <td><%= product.company_id %></td>
        <td><%= product.tax_id %></td>
        <td><%= product.discount_id %></td>
        <td><%= product.stock %></td>
        <td><%= product.stock_active %></td>
        <td><%= product.active %></td>
        <td><%= link_to t(:show), product %></td>
        <td><%= link_to t(:edit), edit_product_path(product) %></td>
        <td><%= link_to t(:destroy), product, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
