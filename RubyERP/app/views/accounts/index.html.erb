<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Iban</th>
      <th>Description</th>
      <th>Account holder</th>
      <th>Client</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.iban %></td>
        <td><%= account.description %></td>
        <td><%= account.account_holder %></td>
        <td><%= account.client_id %></td>
        <td><%= account.default %></td>
        <td><%= link_to t(:show), account %></td>
        <td><%= link_to t(:edit), edit_account_path(account) %></td>
        <td><%= link_to t(:destroy), account, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
