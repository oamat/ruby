<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Client</th>
      <th>Address</th>
      <th>Address</th>
      <th>Tax</th>
      <th>Tax</th>
      <th>Discount</th>
      <th>Discount</th>
      <th>Payment</th>
      <th>Date</th>
      <th>Observations</th>
      <th>Expiration</th>
      <th>Total</th>
      <th>Tariff code</th>
      <th>Gross load</th>
      <th>Net load</th>
      <th>Receiver</th>
      <th>Sender</th>
      <th>Has invoice</th>
      <th>Has forecast</th>
      <th>Has order</th>
      <th>Has delivery</th>
      <th>Invoice</th>
      <th>Forecast</th>
      <th>Order</th>
      <th>Deliverynote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.company_id %></td>
        <td><%= order.client_id %></td>
        <td><%= order.address_id %></td>
        <td><%= order.address %></td>
        <td><%= order.tax_id %></td>
        <td><%= order.tax %></td>
        <td><%= order.discount_id %></td>
        <td><%= order.discount %></td>
        <td><%= order.payment %></td>
        <td><%= order.date %></td>
        <td><%= order.observations %></td>
        <td><%= order.expiration %></td>
        <td><%= order.total %></td>
        <td><%= order.tariff_code %></td>
        <td><%= order.gross_load %></td>
        <td><%= order.net_load %></td>
        <td><%= order.receiver %></td>
        <td><%= order.sender %></td>
        <td><%= order.has_invoice %></td>
        <td><%= order.has_forecast %></td>
        <td><%= order.has_order %></td>
        <td><%= order.has_delivery %></td>
        <td><%= order.invoice_id %></td>
        <td><%= order.forecast_id %></td>
        <td><%= order.order_id %></td>
        <td><%= order.deliverynote_id %></td>
        <td><%= link_to t(:show), order %></td>
        <td><%= link_to t(:edit), edit_order_path(order) %></td>
        <td><%= link_to t(:destroy), order, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

