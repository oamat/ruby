<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Direction</th>
      <th>Postal code</th>
      <th>City</th>
      <th>Province</th>
      <th>Country</th>
      <th>Post office</th>
      <th>Type</th>
      <th>Description</th>
      <th>Client</th>
      <th>Default client</th>
      <th>Company</th>
      <th>Default company</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.direction %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.city %></td>
        <td><%= address.province %></td>
        <td><%= address.country %></td>
        <td><%= address.post_office %></td>
        <td><%= address.type %></td>
        <td><%= address.description %></td>
        <td><%= address.client_id %></td>
        <td><%= address.default_client %></td>
        <td><%= address.company_id %></td>
        <td><%= address.default_company %></td>
        <td><%= address.contact_id %></td>
        <td><%= link_to t(:show), address %></td>
        <td><%= link_to t(:edit), edit_address_path(address) %></td>
        <td><%= link_to t(:destroy), address, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
