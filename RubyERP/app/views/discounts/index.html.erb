<h1>Listing discounts</h1>

<table>
  <thead>
    <tr>
      <th>Discount</th>
      <th>Description</th>
      <th>Company</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discounts.each do |discount| %>
      <tr>
        <td><%= discount.discount %></td>
        <td><%= discount.description %></td>
        <td><%= discount.company_id %></td>
        <td><%= discount.default %></td>
        <td><%= link_to t(:show), discount %></td>
        <td><%= link_to t(:edit), edit_discount_path(discount) %></td>
        <td><%= link_to t(:destroy), discount, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discount', new_discount_path %>
