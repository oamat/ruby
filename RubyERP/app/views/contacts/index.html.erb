<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cif</th>
      <th>Position</th>
      <th>Department</th>
      <th>Telephone</th>
      <th>Other telefono</th>
      <th>Mobile</th>
      <th>Mail</th>
      <th>Observations</th>
      <th>Client</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.cif %></td>
        <td><%= contact.position %></td>
        <td><%= contact.department %></td>
        <td><%= contact.telephone %></td>
        <td><%= contact.other_telefono %></td>
        <td><%= contact.mobile %></td>
        <td><%= contact.mail %></td>
        <td><%= contact.observations %></td>
        <td><%= contact.client_id %></td>
        <td><%= contact.default %></td>
        <td><%= link_to t(:show), contact %></td>
        <td><%= link_to t(:edit), edit_contact_path(contact) %></td>
        <td><%= link_to t(:destroy), contact, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
