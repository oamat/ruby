<% if errors != nil && errors.any? %>
   <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Errors!</strong> <%= pluralize(errors.count, "error") %><br><ul><% errors.full_messages.each do |message| %><li><div class="text-normal"><%= message %></div></li><% end %></ul>
    </div>
<% end %>

<% if flash[:info] %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><div class="text-normal"><strong>Info!</strong> <%= flash[:info] %></div>
    </div>
<%end%>

<% if flash[:success] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><div class="text-normal"><strong>Success!</strong> <%= flash[:success] %></div>
    </div>
<% end %>

<% if flash[:warning] %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><div class="text-normal"><strong>Warning!</strong> <%= flash[:warning] %></div>
    </div>
<% end %>

<% if flash[:danger] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><div class="text-normal"><strong>Danger!</strong> <%= flash[:danger] %></div>
    </div>
<%end%>