<h1><%=t(:listing_profiles)%></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Position</th>
      <th>Department</th>
      <th>Birthday</th>
      <th>Sex</th>
      <th>Role</th>
      <th>Active</th>
      <th>Language</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.telephone %></td>
        <td><%= profile.position %></td>
        <td><%= profile.department %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.sex %></td>
        <td><%= profile.role %></td>
        <td><%= profile.active %></td>
        <td><%= profile.language %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to t(:show), profile %></td>
        <td><%= link_to t(:edit), edit_profile_path(profile) %></td>
        <td><%= link_to t(:destroy), profile, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
